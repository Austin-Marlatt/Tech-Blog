<div class="row">
  <div class="col-md-12">
    <div class="card w-100 text-center">
      <div class="card-header bg-dark text-light text-center">
        <h2 class="fs-1">Share a New Post</h2>
      </div>
      <div class="card-body px-5">
      <form id="blogPost-form">
        <div class="row">
          <label class="form-label fs-1" for="blogPost-title">Title</label>
          <input type="text" name="blogPost-title" class="form-control-lg fs-4 mb-3"/>
        </div>
        <div class="row">
          <label class="form-label fs-1" for="blogPost-body">Body</label>
          <textarea name="blogPost-body" class="form-control-lg fs-4" rows="3"></textarea>
        </div>
          <div class="d-grid gap-2 pt-4">
            <button type="submit" id="submit-btn" class="btn btn-outline-secondary fs-5">Submit</button>
          </div>
      </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/newBlogPost.js"></script>