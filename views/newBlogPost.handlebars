<div class="blog-post card">
  <div class="card-header">
    <h2>Share a New Post</h2>
  </div>
  <form id="blogPost-form" class="card-body">
    <label class="form-label" for="blogPost-title">Title</label>
    <input type="text" name="blogPost-title" class="form-input" />

    <label class="form-label" for="blogPost-body">Body</label>
    <textarea name="blogPost-body" class="form-input"></textarea>

    <button type="submit" class="btn">Submit</button>
  </form>
</div>

<script src="/js/blogPost.js"></script>