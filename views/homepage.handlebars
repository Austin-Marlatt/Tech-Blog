<div class="row">
  {{#each blogPosts}}
  <div class="col-md-6 mb-3">
    <div class="card h-100 w-100 mb-3 text-center">
      <div class="card-header bg-dark text-light">
        <h5>{{{user.username}}}</h5>
      </div>
      <div class="card-body">
        <h3 class="card-title">{{title}}</h3>
        <p class="card-text fs-5">{{body}}</p>
        <div class="d-grid gap-2">
          <a class="btn btn-outline-secondary fs-5" href="/blogPost/{{id}}">Comments</a>
        </div>
      </div>
      <div class="card-footer text-body-secondary bg-dark text-light">
        <h6>{{createdAt}}</h6>
      </div>
    </div>
  </div>
    {{/each}}
</div>