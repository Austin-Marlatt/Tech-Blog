<div class="blog-post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{blogPost.title}}</h2>
      <div>
        {{blogPost.user.username}} Submitted this Post on {{blogPost.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{blogPost.body}}
    </div>
  </article>

  {{#if blogPost.comments}}

  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each blogPost.comments}}
        <div>
          <p>
          {{body}}
          </p>
          <p>
            &mdash; {{user.username}}, {{createdAt}}
          </p>
        </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="comment-form" class="card">
    <div class="card-header">
      <h3>Add a Comment..</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="blogPost-id" value="{{blogPost.id}}" />

      <label class="form-label" for="comment-content">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>

</div>

<script src="/js/comment.js"></script>