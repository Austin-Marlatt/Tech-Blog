<div class="row">
  <div class="col-md-12">
    <div class="card w-100 text-center">
      <div class="card-header bg-dark text-light text-center">
        <h2 class="fs-1">Update Post</h2>
      </div>
        <div class="card-body px-5">
          <form id="update-blogPost-form" class="card-body">
            <input type="hidden" name="blogPost-id" value="{{blogPost.id}}" />
            <div class="row">
              <label for="blogPost-title" class="form-label fs-1">Title:</label>
              <input type="text" name="blogPost-title" value="{{blogPost.title}}" class="form-control-lg fs-4 mb-3" />
            </div>
            <div class="row">
              <label for="blogPost-body" class="form-label fs-1">Content:</label>
              <textarea name="blogPost-body" class="form-control-lg fs-4" rows="3">{{blogPost.body}}</textarea>
            </div>  
            <div class="d-grid gap-2 pt-4">
              <button type="submit" id="submit-btn" class="btn btn-outline-secondary fs-5">Update</button>
            </div>
          </form>
        </div>
        <div class="card-footer text-body-secondary text-center bg-dark text-light">
          <a type="button" id="delete-btn" class="btn btn-outline-danger fs-5">Delete</a>
        </div> 
    </div>
  </div>
</div>

<script src="/js/editBlogPost.js"></script>